		<section>
			<div class="demo-html">
				<table id="example" class="display" style="width:100%; text-align: center;">
					<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-top"></div>
					<thead>
						<tr>
							<th>사용자 ID</th>
							<th>설 명</th>
							<th>사용자 상태</th>
							<th>고정 IP</th>
							<th>사용 IP</th>
							<th style="width: 20%;">마지막 로그인</th>
							<th>계정 만료일</th>
						</tr>
					</thead>
					<tbody>
						<%= for (user) in newUsers { %>
						<tr>
							<% 
								if (user.UserHistory.AccExpires.Year() > 3000) {
									let year3000 = true
								} else {
									let year3000 = false
								}
								if ( user.UserHistory.Days > 30 ) {
									let overDays = true
								} else {
									let overDays = false
								}
							%>
							<td>
							  <% let paths = "user/" + realm + "/" + user.Username %>
							  <%= linkTo(paths) { %>
							  <%= user.Username %>
							  <% } %>
							</td>
							  <td style="text-align: left;"><%= user.Fullname %> | <%= user.UserHistory.Days %></td>
							  <td>
								<%= if (user.Enabled == false) { %>
									<div style="color:red"><%= user.Enabled %></div>
								<% } else { %>  
								<%= user.Enabled %>
								<% } %>
							</td>
							<td>
								<%= user.UserHistory.StaticIP %>
							</td>
							<td><%= user.UserHistory.FramedIP %></td>
							<td>
								<% let lastL = user.UserHistory.LastLogin.Local() %>
								<%= if (user.UserHistory.LastLogin.Year() < 1000) { %>
									NONE
								<% } else if (overDays) { %>
									<div style="color:red"><%= lastL.Format("2006-01-02T15:04") %></div>
								<% } else { %>
									<%= lastL.Format("2006-01-02T15:04") %>
								<% } %>
							</td>
							<td>
								<%= if (user.UserHistory.AccExpires.IsZero()) { %>
									NULL
								<% } else if ( year3000 ) { %>
									NONE
								<% } else { %>
									<% let expD = user.UserHistory.AccExpires.Local() %>
									<%= expD.Format("2006-01-02") %>
								<% } %>
							</td>
							</tr>
						<% } %>
					</tbody>

				</table>
			</div>
			</div>
		</div>
	</section>
